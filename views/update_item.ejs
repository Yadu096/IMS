<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>

<!-- Input Fields -->
<div class="card text-bg-ligth text-center m-3 mx-auto" style="width: 550px">
  <form
    action="http://localhost:3000/api/v1/item/update/<%= item.id %>"
    method="post"
    style="display: inline-flex"
  >
    <div class="card-body">
      <h5 class="card-title">Update Item Details</h5>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Item Name"
          value="<%= item.name %>"
          name="name"
          required
        />
        <label for="floatingInput">Item name</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="ID"
          value="<%= item.id %>"
          name="qty"
          disabled
        />
        <label for="floatingInput">ID</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="Quantity"
          value="<%= item.qty %>"
          name="qty"
          required
        />
        <label for="floatingInput">Quantity</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="Price"
          value="<%= item.price %>"
          name="price"
          required
        />
        <label for="floatingInput">Price</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Category"
          value="<%= item.category %>"
          name="category"
          required
        />
        <label for="floatingInput">Category</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Supplier Info"
          value="<%= item.supplierInfo %>"
          name="supplierInfo"
          required
        />
        <label for="floatingInput">Supplier Info</label>
      </div>
      <div>
        <button type="submit">Update</button>
      </div>
    </div>
  </form>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
