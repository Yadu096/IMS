<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>

<!-- Input Fields -->
<div class="card text-bg-info text-center m-3 mx-auto" style="width: 50%">
  <form
    action="http://localhost:3000/api/v1/item/create"
    method="post"
    style="display: inline-flex"
  >
    <div class="card-body">
      <div class="card-header">
        <h4 class="card-title">Add item to the Inventory:</h4>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Item name"
          name="name"
          required
        />
        <label for="floatingInput">Item name</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="ID of item"
          name="id"
          required
        />
        <label for="floatingInput">ID of item</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="Quantity of item"
          name="qty"
          required
        />
        <label for="floatingInput">Quantity of item</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          placeholder="Price of item"
          name="price"
          required
        />
        <label for="floatingInput">Price of item</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Category"
          name="category"
          required
        />
        <label for="floatingInput">Category</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="Supplier information"
          name="supplierInfo"
          required
        />
        <label for="floatingInput">Supplier Information</label>
      </div>
      <div>
        <button type="submit">Add Item</button>
      </div>
    </div>
  </form>
</div>

<div class="card mx-auto text-bg-light m-3 p-3" style="width: 50%">
  <div class="card-header">
    <h4 class="card-title">Items in the Inventory:</h4>
  </div>
  <div class="card-body">
    <ol class="list-group list-group-flush list-group-numbered">
      <% for(let item of items){%>
      <li class="list-group-item">
        <strong><%= item.name %></strong>, <%= item.category %>
        <a
          href="/item/details/<%= item._id %>"
          class="btn btn-light"
          style="position: absolute; right: 10px; top: 1px"
          >View details</a
        >
      </li>
      <%} %>
    </ol>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
