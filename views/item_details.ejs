<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>

<div class="card mx-auto text-bg-light m-3 p-3" style="width: 60%">
  <div class="card-header">
    <h4 class="card-title">Item details:</h4>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Name: </strong> <%= item.name %></li>
      <li class="list-group-item"><strong>Item ID: </strong> <%= item.id %></li>
      <li class="list-group-item">
        <strong>Quantity: </strong> <%= item.qty %>
      </li>
      <li class="list-group-item">
        <strong>Price: </strong> <%= item.price %>
      </li>
      <li class="list-group-item">
        <strong>Category: </strong> <%= item.category %>
      </li>
      <li class="list-group-item">
        <strong>Supplier Information: </strong> <%= item.supplierInfo %>
      </li>

      <li class="list-group-item">
        <a
          href="http://localhost:3000/api/v1/item/delete/<%= item.id %>"
          class="btn btn-light"
          >Delete Item</a
        >
        <a href="/item/update_page/<%= item._id %>" class="btn btn-light"
          >Update Item</a
        >
      </li>
    </ul>
  </div>
</div>
